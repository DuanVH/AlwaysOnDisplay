<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:autoSizeTextType="uniform"
    android:background="@color/colorBlackTow"
    android:gravity="center"
    android:padding="17dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Please grant the following permissions for the app to function as intended"
        android:textColor="@color/colorWhite"
        android:textSize="19dp" />

    <TableRow
        android:id="@+id/tr01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_margin="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1."
            android:textColor="@color/colorWhite"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/tv_content01"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_line_permission"
            android:gravity="center"
            android:padding="25dp"
            android:text="DONE"
            android:textColor="@color/colorWhite"
            android:textSize="23dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tr01"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2."
            android:textColor="@color/colorWhite"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/tv_content02"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_line_permission"
            android:gravity="center"
            android:padding="23dp"
            android:text="ALLOW NOW"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tr02"
        android:layout_margin="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3."
            android:textColor="@color/colorWhite"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/tv_content03"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_line_permission"
            android:gravity="center"
            android:padding="23dp"
            android:text="ALLOW NOW"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tr04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tr03"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_04"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="4."
            android:textColor="@color/colorWhite"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/tv_content04"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/rounded_line_permission"
            android:gravity="center"
            android:padding="23dp"
            android:text="ALLOW NOW"
            android:textColor="@color/colorWhite"
            android:textSize="25dp" />
    </TableRow>

    <ImageView
        android:id="@+id/iv_next"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle"
        android:scaleType="center"
        android:src="@drawable/next" />

</RelativeLayout>